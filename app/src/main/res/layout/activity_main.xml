<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.footballscorekeeper.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/footballlaces" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0"
                        android:id="@+id/team_a_score"
                        android:textSize="64sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Home"
                        android:textColor="#000000"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#000000"
                        android:layout_margin="10dp"/>
                    <Button
                        android:layout_width="140sp"
                        android:layout_height="wrap_content"
                        android:text="TD"
                        android:layout_gravity="center"
                        android:onClick="addTDForTeamA"
                        android:layout_marginTop="10sp"/>
                    <Button
                        android:layout_width="140sp"
                        android:layout_height="wrap_content"
                        android:text="PAT"
                        android:layout_gravity="center"
                        android:onClick="addPATForTeamA"/>
                    <Button
                        android:layout_width="140sp"
                        android:layout_height="wrap_content"
                        android:text="2pt Conversion"
                        android:layout_gravity="center"
                        android:onClick="add2ptForTeamA"/>
                    <Button
                        android:layout_width="140sp"
                        android:layout_height="wrap_content"
                        android:text="Field Goal"
                        android:layout_gravity="center"
                        android:onClick="addFieldGoalForTeamA"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0"
                        android:id="@+id/team_b_score"
                        android:textSize="64sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Away"
                        android:textColor="#000000"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#000000"
                        android:layout_margin="10dp"/>
                    <Button
                        android:layout_marginTop="10sp"
                        android:layout_width="140sp"
                        android:layout_height="wrap_content"
                        android:text="TD"
                        android:layout_gravity="center"
                        android:onClick="addTDForTeamB" />
                    <Button
                        android:layout_width="140sp"
                        android:layout_height="wrap_content"
                        android:text="PAT"
                        android:layout_gravity="center"
                        android:onClick="addPATForTeamB"/>
                    <Button
                        android:layout_width="140sp"
                        android:layout_height="wrap_content"
                        android:text="2pt Conversion"
                        android:layout_gravity="center"
                        android:onClick="add2ptForTeamB" />
                    <Button
                        android:layout_width="140sp"
                        android:layout_height="wrap_content"
                        android:text="Field Goal"
                        android:layout_gravity="center"
                        android:onClick="addFieldGoalForTeamB"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_margin="20sp"
            android:onClick="scoreReset"/>
        <TextView
            android:layout_width="1sp"
            android:layout_height="match_parent"
            android:background="#000000"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="80dp"
            android:layout_marginTop="100dp"/>
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
